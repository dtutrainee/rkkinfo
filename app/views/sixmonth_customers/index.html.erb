<%- model_class = SixmonthCustomer -%>
<div align="center">
<a href="http://rkkinfosystem.herokuapp.com/instant_customers"><button>One Time customers</button></a>
<a href="http://rkkinfosystem.herokuapp.com/oneyear_customers"><button>One Year customers</button></a>
<a href="http://rkkinfosystem.herokuapp.com/twoyear_customers"><button>Two year customers</button></a>

</div>
<div align="right">
<%= form_tag :controller => 'login2', 
             :action => 'logout' do %>
<%= submit_tag 'Logout', :class => 'ctrl' %>
<% end %>
</div>
<h4><center>These customers have applied for Six months service.</center></h4>
<h5><center>These Customers have given $129/Â£129</center></h5>
<br/><br/>
<form class="form-search">

    <%= text_field_tag :emp_no, params[:emp_no] %>

    <button type="submit" class="btn">Search</button>
    </form>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:emp_no) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:e_mail) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
                  <th><%= model_class.human_attribute_name(:plan) %></th>

      <th><%= model_class.human_attribute_name(:issue) %></th>
      <th><%= model_class.human_attribute_name(:trouble_shooting_steps) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>

      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sixmonth_customers.each do |sixmonth_customer| %>
      <tr>
        <td><%= link_to sixmonth_customer.id, sixmonth_customer_path(sixmonth_customer) %></td>
        <td><%= sixmonth_customer.emp_no %></td>
        <td><%= sixmonth_customer.name %></td>
        <td><%= sixmonth_customer.e_mail %></td>
        <td><%= sixmonth_customer.phone %></td>
                        <td><%=  sixmonth_customer.plan %></td>

        <td><%= sixmonth_customer.issue %></td>
        <td><%= sixmonth_customer.trouble_shooting_steps %></td>
        <td><%= sixmonth_customer.status %></td>
        <td><%=l sixmonth_customer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sixmonth_customer_path(sixmonth_customer), :class => 'btn btn-mini' %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

