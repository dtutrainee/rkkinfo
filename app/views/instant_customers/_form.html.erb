<html>


<%= form_for @instant_customer, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group" style="color:#1C9DD6">
    <%= f.label :emp_no, :class => 'control-label' %>
    <div class="controls">
<%= f.select :emp_no, Employee.all.collect(&:no) %>    </div>
  </div>
  <div class="control-group" style="color:#1C9DD6">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group" style="color:#1C9DD6">
    <%= f.label :e_mail, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :e_mail, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group" style="color:#1C9DD6">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group" style="color:#1C9DD6">
    <%= f.label :plan, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :plan, :class => 'text_field', :value => "$79" %>
    </div>
  </div>
  <div class="form-actions">
  <form class="form-search">
    <button type="submit" class="btn">Proceed</button>
    </form> 
  </div>
<% end %>
</html>
