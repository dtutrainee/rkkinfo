<%- model_class = Customer -%>

<div align="right">
<%= form_tag :controller => 'login', 
             :action => 'logout' do %>
<%= submit_tag 'Logout', :class => 'ctrl' %>
<% end %>
</div>

<form class="form-search">

    <%= text_field_tag :emp_no, params[:emp_no] %>
    

    <button type="submit" class="btn">Search</button>
    </form>
<table class="table table-striped">
  <thead>
    <div style="color:#1C9DD6">
    <tr>
      
      <th><%= model_class.human_attribute_name(:emp_no) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:e_mail) %></th>
      <th><%= model_class.human_attribute_name(:plan) %></th>
      <th><%= model_class.human_attribute_name(:technician) %></th>
      <th><%= model_class.human_attribute_name(:issue) %></th>
      <th><%= model_class.human_attribute_name(:trouble_shootingsteps) %></th>
      <th><%= model_class.human_attribute_name(:feedback) %></th>
      
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </div>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        
        <td><%= customer.emp_no %></td>
        <td><%= customer.name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.e_mail %></td>
        <td><%= customer.plan %></td>
        <td><%= customer.technician %></td>
        <td><%= customer.issue %></td>
        <td><%= customer.trouble_shootingsteps %></td>
        <td><%= customer.feedback %></td>
      
        <td><%=l customer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_customer_path(customer), :class => 'btn btn-mini' %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


